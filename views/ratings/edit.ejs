<%- include("../partials/header") %>
<div class="container">
    <div class="title">
        <h1 style="text-align: center;">Edit <%= rating.title %> rating</h1>
        <hr>
    </div>
    <div class="row">
        <div class="col-sm-5 text-center">
            <div class="figure rounded">
                <% if (rating.poster === "N/A") { %>
                    <img class="figure-img img-fluid rounded" src="/../img/default-poster.jpg"/>
                <% }  else { %>
                    <img class="figure-img img-fluid rounded" src="<%= rating.poster %>"/>
                <% } %>        
            </div>
        </div>
        <div class="col-sm-7">
            <form action="/ratings/<%= rating.imdbID %>?_method=PUT" method="POST" autocomplete="off">
                <div class="form-group">
                    <label for="rating">Rating <i class="fa fa-star"></i></label>
                    <input class="form-control" type="number" id="rating" name="rating" min="0" max="10" step="0.1" value="<%= rating.rating %>">
                </div>
                <div class="form-group">
                    <label for="comment">Comment</label>
                    <textarea class="form-control" type="text" id="comment" name="comment"><%= rating.comment %></textarea>
                </div>
                <div class="form-group row">
                    <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
        </div>
    </div>
    <hr>
    <div class="row" style="padding-bottom: 10px;">
        <a class="btn btn-outline-secondary" href="javascript:history.back()" role="button">Go Back</a> 
    </div>
</div>
<%- include("../partials/footer") %>
